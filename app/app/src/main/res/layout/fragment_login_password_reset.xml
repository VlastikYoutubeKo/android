<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintWidth_max="480dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >

    <TextView
        android:id="@+id/password_reset_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Forgot your password?"
        android:textSize="12pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"

        />


    <TextView
        android:id="@+id/password_reset_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_reset_header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Enter your email or phone number to reset your password."
        android:textSize="8pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"

        />




    <TextView
        android:id="@+id/password_reset_user_auth_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_reset_description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Email or Phone Number"
        android:textSize="8pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"

        />

    <EditText
        android:id="@+id/password_reset_user_auth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_reset_user_auth_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="10pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="0dp"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/password_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_reset_user_auth"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Continue"
        android:textSize="8pt"
        android:fontFamily="sans-serif-thin"
        android:layout_marginTop="8dp"

        />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/password_reset_spinner"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/password_reset_button"
        app:layout_constraintBottom_toBottomOf="@id/password_reset_button"
        app:layout_constraintLeft_toRightOf="@id/password_reset_button"

        android:indeterminate="true"
        app:indicatorSize="24dp"

        />

        <TextView
            android:id="@+id/password_reset_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/password_reset_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/login_password_error"
            android:textSize="8pt"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/by_s_red"
            android:layout_marginTop="0dp"
            />



    <TextView
        android:id="@+id/password_reset_help_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_reset_error"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/password_reset_help"
        android:textSize="8pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"

        />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>