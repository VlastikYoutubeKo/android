<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/connect_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"

        android:text="Connected"
        android:textSize="8pt"
        android:fontFamily="sans-serif-thin"

        android:gravity="center"
        android:drawableLeft="@drawable/connect_not_connected"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/connect_header_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="connect_header" />



    <ImageView
        android:id="@+id/connect_top_image"

        android:layout_width="160dp"
        android:layout_height="0dp"

        app:layout_constraintHeight_min="160dp"
        app:layout_constraintTop_toBottomOf="@id/connect_header"
        app:layout_constraintBottom_toTopOf="@id/connect_bottom_barrier"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/connect_location_type_icon"

        android:layout_marginTop="8dp"

        android:src="@drawable/ic_location_group_large"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        />

    <ImageView
        android:id="@+id/connect_location_type_icon"

        android:layout_width="24dp"
        android:layout_height="24dp"

        app:layout_constraintTop_toTopOf="@id/connect_location_type_label"
        app:layout_constraintBottom_toBottomOf="@id/connect_location_type_label"
        app:layout_constraintLeft_toRightOf="@id/connect_top_image"
        app:layout_constraintRight_toLeftOf="@id/connect_location_type_label"

        android:layout_marginLeft="8dp"

        android:src="@drawable/ic_location_group_small"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        />


    <TextView
        android:id="@+id/connect_location_type_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/connect_top_image"
        app:layout_constraintBottom_toTopOf="@id/connect_location_group_label"
        app:layout_constraintLeft_toRightOf="@id/connect_location_type_icon"

        android:layout_marginLeft="4dp"

        android:text="Group"
        android:textSize="8pt"
        android:fontFamily="sans-serif-thin"
        />


    <TextView
        android:id="@+id/connect_location_group_label"
        android:layout_height="wrap_content"
        android:layout_width="0dp"

        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/connect_location_type_label"
        app:layout_constraintBottom_toTopOf="@id/connect_provider_summary"
        app:layout_constraintLeft_toRightOf="@id/connect_top_image"
        app:layout_constraintRight_toLeftOf="@id/connect_side_barrier"



        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"


        android:maxLines="3"
        android:breakStrategy="balanced"
        android:ellipsize="end"
        android:text="Strong privacy laws and internet freedom"
        android:textSize="10pt"
        android:fontFamily="sans-serif"
        />


    <TextView
        android:id="@+id/connect_provider_summary"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/connect_location_group_label"
        app:layout_constraintBottom_toTopOf="@id/connect_bottom_barrier"
        app:layout_constraintLeft_toRightOf="@id/connect_top_image"

        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"

        android:text="6 providers"
        android:textSize="8pt"
        android:fontFamily="sans-serif-thin"
        />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/connect_side_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="connect_shuffle,connect_broaden" />

    <ImageButton
        android:id="@+id/connect_shuffle"
        style="?android:attr/borderlessButtonStyle"

        android:layout_width="32dp"
        android:layout_height="32dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/connect_broaden"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"

        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_connect_shuffle"
        />


    <ImageButton
        android:id="@+id/connect_broaden"
        style="?android:attr/borderlessButtonStyle"

        android:layout_width="32dp"
        android:layout_height="32dp"

        app:layout_constraintTop_toBottomOf="@id/connect_shuffle"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"

        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_connect_broaden"
        />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/connect_bottom_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="connect_issue,connect_disconnect" />


    <com.google.android.material.button.MaterialButton
        style="@style/Widget.AppCompat.Button.Borderless"

        android:id="@+id/connect_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Site not loading?"
        android:textAllCaps="false"
        android:textSize="8pt"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/by_p_blue"
        app:backgroundTint="@color/p_s_gray"
        />



    <com.google.android.material.button.MaterialButton
        style="@style/Widget.AppCompat.Button.Borderless"

        android:id="@+id/connect_disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Disconnect"
        android:textAllCaps="false"
        android:textSize="8pt"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/by_p_blue"
        app:backgroundTint="@color/p_s_gray"
        />






</androidx.constraintlayout.widget.ConstraintLayout>
