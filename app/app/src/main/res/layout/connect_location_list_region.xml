<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">


    <ImageView
        android:id="@+id/connect_country_image"

        android:layout_width="64dp"
        android:layout_height="0dp"

        app:layout_constraintHeight_min="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/connect_location_label"

        android:src="@drawable/country_us_512_a50"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        />


    <ImageView
        android:id="@+id/connect_location_icon_large"

        android:layout_width="32dp"
        android:layout_height="32dp"

        app:layout_constraintTop_toTopOf="@id/connect_country_image"
        app:layout_constraintBottom_toBottomOf="@id/connect_country_image"
        app:layout_constraintLeft_toLeftOf="@id/connect_country_image"
        app:layout_constraintRight_toRightOf="@id/connect_country_image"

        android:src="@drawable/ic_location_region_large"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        />

    <TextView
        android:id="@+id/connect_location_label"
        android:layout_height="wrap_content"
        android:layout_width="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/connect_provider_summary"
        app:layout_constraintLeft_toRightOf="@id/connect_country_image"
        app:layout_constraintRight_toLeftOf="@id/connect_connect"



        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"


        android:maxLines="3"
        android:breakStrategy="balanced"
        android:ellipsize="end"
        android:text="California"
        android:textSize="10pt"
        android:fontFamily="sans-serif"
        />


    <TextView
        android:id="@+id/connect_provider_summary"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/connect_location_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/connect_country_image"

        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"

        android:text="6 providers"
        android:textSize="8pt"
        android:fontFamily="sans-serif-thin"
        />


    <com.google.android.material.button.MaterialButton

        android:id="@+id/connect_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:text="Go"
        android:textAllCaps="false"
        android:textSize="8pt"
        android:fontFamily="sans-serif-thin"
        android:layout_margin="4dp"

        />



</androidx.constraintlayout.widget.ConstraintLayout>
