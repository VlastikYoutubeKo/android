<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintWidth_max="480dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >

    <TextView
        android:id="@+id/password_reset_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Forgot your password?"
        android:textSize="12pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"

        />


    <TextView
        android:id="@+id/password_reset_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_reset_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Reset link sent to heyhey@bringyour.com"
        android:textSize="8pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"

        />


    <TextView
        android:id="@+id/password_reset_help_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_reset_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/password_reset_help"
        android:textSize="8pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"

        />


    <com.google.android.material.button.MaterialButton
        style="@style/Widget.AppCompat.Button.Borderless"

        android:id="@+id/password_reset_resend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_reset_help_summary"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/password_reset_resend"
        android:textAllCaps="false"
        android:textSize="8pt"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/by_p_blue"
        app:backgroundTint="@color/p_s_gray"
        android:layout_marginTop="16dp"

        />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/password_reset_resend_spinner"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/password_reset_resend_button"
        app:layout_constraintBottom_toBottomOf="@id/password_reset_resend_button"
        app:layout_constraintLeft_toRightOf="@id/password_reset_resend_button"

        android:indeterminate="true"
        app:indicatorSize="24dp"



        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
