<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="?colorUpgradeBackground"
    >

    <!-- free badge image -->
    <!-- provider count -->
    <!-- edge count -->
    <!-- region count -->
    <!-- country count -->

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/free_pro_center_line"
        app:barrierDirection="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="free_pro_provider_count,free_pro_edge_count,free_pro_region_count,free_pro_country_count,free_pro_superfast_statement"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/free_pro_upgrade_line"
        app:barrierDirection="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="free_pro_provider_count,free_pro_edge_count,free_pro_region_count,free_pro_country_count,free_pro_superfast_statement"/>

    <!-- CENTER_INSIDE -->
    <ImageView
        android:id="@+id/free_pro_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/free_pro_center_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/free_pro_superfast_badge"

        android:layout_margin="8dp"

        android:scaleType="centerInside"
        android:src="@drawable/badge_pro"
        android:contentDescription="@string/free_pro_badge"
        />

    <ImageView
        android:id="@+id/free_pro_superfast_badge"
        android:layout_width="32dp"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/free_pro_center_line"
        app:layout_constraintTop_toBottomOf="@id/free_pro_badge"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_margin="8dp"

        android:scaleType="centerInside"
        android:src="@drawable/badge_superfast"
        android:contentDescription="@string/free_superfast_badge"
        />

    <TextView
        android:id="@+id/free_pro_provider_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/free_pro_badge"
        app:layout_constraintEnd_toStartOf="@id/free_pro_upgrade_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/free_pro_edge_count"
        app:layout_constraintHorizontal_bias="0"

        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:text="20 providers"
        />

    <TextView
        android:id="@+id/free_pro_edge_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/free_pro_badge"
        app:layout_constraintEnd_toStartOf="@id/free_pro_upgrade_button"
        app:layout_constraintTop_toBottomOf="@id/free_pro_provider_count"
        app:layout_constraintBottom_toTopOf="@id/free_pro_region_count"
        app:layout_constraintHorizontal_bias="0"

        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:text="20 edges"
        />

    <TextView
        android:id="@+id/free_pro_region_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/free_pro_badge"
        app:layout_constraintEnd_toStartOf="@id/free_pro_upgrade_button"
        app:layout_constraintTop_toBottomOf="@id/free_pro_edge_count"
        app:layout_constraintBottom_toTopOf="@id/free_pro_country_count"
        app:layout_constraintHorizontal_bias="0"

        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:text="20 regions"
        />

    <TextView
        android:id="@+id/free_pro_country_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/free_pro_badge"
        app:layout_constraintEnd_toStartOf="@id/free_pro_upgrade_button"
        app:layout_constraintTop_toBottomOf="@id/free_pro_region_count"
        app:layout_constraintBottom_toTopOf="@id/free_pro_superfast_statement"
        app:layout_constraintHorizontal_bias="0"

        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:text="20 countries"
        />

    <TextView
        android:id="@+id/free_pro_superfast_statement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="3"

        app:layout_constraintStart_toEndOf="@id/free_pro_badge"
        app:layout_constraintEnd_toStartOf="@id/free_pro_upgrade_button"
        app:layout_constraintTop_toBottomOf="@id/free_pro_country_count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"

        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:text="access superfast"
        />

    <TextView
        android:id="@+id/free_pro_upgrade_statement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/free_pro_upgrade_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/free_pro_upgrade_button"

        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:text="$3/month"
        />

    <Button
        android:id="@+id/free_pro_upgrade_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/free_pro_upgrade_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/free_pro_upgrade_statement"
        app:layout_constraintBottom_toBottomOf="parent"

        android:textAlignment="center"
        android:textSize="14sp"
        android:text="upgrade to pro"
        />



</androidx.constraintlayout.widget.ConstraintLayout>