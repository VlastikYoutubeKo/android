<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <!-- free badge image -->
    <!-- provider count -->
    <!-- edge count -->
    <!-- region count -->
    <!-- country count -->

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/pro_pro_center_line"
        app:barrierDirection="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="pro_pro_provider_count,pro_pro_edge_count,pro_pro_region_count,pro_pro_country_count,pro_pro_superfast_statement"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/pro_pro_upgrade_line"
        app:barrierDirection="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="pro_pro_provider_count,pro_pro_edge_count,pro_pro_region_count,pro_pro_country_count,pro_pro_superfast_statement"/>

    <!-- CENTER_INSIDE -->
    <ImageView
        android:id="@+id/pro_pro_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@id/pro_pro_superfast_badge"
        app:layout_constraintEnd_toStartOf="@id/pro_pro_center_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:contentDescription="@string/pro_pro_badge"
        android:scaleType="centerInside"
        android:src="@drawable/badge_pro"/>

    <ImageView
        android:id="@+id/pro_pro_superfast_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pro_pro_center_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pro_pro_badge"

        android:contentDescription="@string/pro_superfast_badge"
        android:scaleType="centerInside"
        android:src="@drawable/badge_superfast" />

    <TextView
        android:id="@+id/pro_pro_provider_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/pro_pro_badge"
        app:layout_constraintEnd_toStartOf="@id/pro_pro_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pro_pro_edge_count"
        app:layout_constraintHorizontal_bias="0"

        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:text="20 providers"
        />

    <TextView
        android:id="@+id/pro_pro_edge_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/pro_pro_badge"
        app:layout_constraintEnd_toStartOf="@id/pro_pro_background"
        app:layout_constraintTop_toBottomOf="@id/pro_pro_provider_count"
        app:layout_constraintBottom_toTopOf="@id/pro_pro_region_count"
        app:layout_constraintHorizontal_bias="0"

        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:text="20 edges"
        />

    <TextView
        android:id="@+id/pro_pro_region_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/pro_pro_badge"
        app:layout_constraintEnd_toStartOf="@id/pro_pro_background"
        app:layout_constraintTop_toBottomOf="@id/pro_pro_edge_count"
        app:layout_constraintBottom_toTopOf="@id/pro_pro_country_count"
        app:layout_constraintHorizontal_bias="0"

        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:text="20 regions"
        />

    <TextView
        android:id="@+id/pro_pro_country_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/pro_pro_badge"
        app:layout_constraintEnd_toStartOf="@id/pro_pro_background"
        app:layout_constraintTop_toBottomOf="@id/pro_pro_region_count"
        app:layout_constraintBottom_toTopOf="@id/pro_pro_superfast_statement"
        app:layout_constraintHorizontal_bias="0"

        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:text="20 countries"
        />

    <TextView
        android:id="@+id/pro_pro_superfast_statement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="3"

        app:layout_constraintStart_toEndOf="@id/pro_pro_badge"
        app:layout_constraintEnd_toStartOf="@id/pro_pro_background"
        app:layout_constraintTop_toBottomOf="@id/pro_pro_country_count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"

        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:text="access superfast"
        />

    <ImageView
        android:id="@+id/pro_pro_background"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toEndOf="@id/pro_pro_upgrade_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:scaleType="center"
        android:src="@drawable/bg_pro"
        />

    <ImageView
        android:id="@+id/pro_pro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="@id/pro_pro_background"
        app:layout_constraintEnd_toEndOf="@id/pro_pro_background"
        app:layout_constraintTop_toTopOf="@id/pro_pro_background"
        app:layout_constraintBottom_toBottomOf="@id/pro_pro_background"

        android:scaleType="centerInside"
        android:src="@drawable/text_pro"
        android:contentDescription="@string/pro_pro_thank"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
