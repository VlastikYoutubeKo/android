<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintWidth_max="480dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >

    <TextView
        android:id="@+id/create_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Create a network"
        android:textSize="12pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"

        />

    <TextView
        android:id="@+id/create_user_auth_jwt_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/create_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Google will be the primary login."
        android:textSize="8pt"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"

        />


    <TextView
        android:id="@+id/create_user_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/create_user_auth_jwt_summary"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Your name"
        android:textSize="8pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"

        />

    <EditText

        android:id="@+id/create_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/create_user_name_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="10pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="0dp"
        android:inputType="textPersonName"
        android:autofillHints="name"
        />



    <TextView
        android:id="@+id/create_network_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/create_user_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Choose a network name"
        android:textSize="8pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"

        />

    <EditText

        android:id="@+id/create_network_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/create_network_name_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="10pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="0dp"
        android:inputType="text"
        android:autofillHints="username"
        />

    <TextView
        android:id="@+id/create_network_name_domain_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/create_network_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text=".bringyour.network"
        android:textSize="8pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="0dp"
        android:padding="8dp"
        android:background="@color/p_s_gray"
        />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/create_network_name_spinner"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/create_network_name_domain_label"
        app:layout_constraintBottom_toBottomOf="@id/create_network_name_domain_label"
        app:layout_constraintLeft_toRightOf="@id/create_network_name_domain_label"

        android:indeterminate="true"
        app:indicatorSize="24dp"
        />



    <TextView
        android:id="@+id/create_network_name_available"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/create_network_name_domain_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Available!"
        android:textSize="8pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/by_s_green"
        android:layout_marginTop="0dp"
        />

    <TextView
        android:id="@+id/create_network_name_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/create_network_name_available"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/network_name_check_error"
        android:textSize="8pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/by_p_gray"
        android:layout_marginTop="0dp"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/create_network_name_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="create_network_name_available,create_network_name_error" />



    <com.google.android.material.checkbox.MaterialCheckBox

        android:id="@+id/create_terms"

        android:layout_width="0dp"
        android:layout_height="wrap_content"


        app:layout_constraintTop_toBottomOf="@id/create_network_name_barrier"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        android:layout_marginTop="16dp"

        android:paddingLeft="8dp"

        android:text="@string/terms_jwt"
        android:textSize="8pt"
        android:fontFamily="sans-serif-thin"

        app:buttonTint="@color/login_checkbox"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_network_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/create_terms"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Create Network"
        android:textSize="8pt"
        android:fontFamily="sans-serif-thin"

        />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/create_network_spinner"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/create_network_button"
        app:layout_constraintBottom_toBottomOf="@id/create_network_button"
        app:layout_constraintLeft_toRightOf="@id/create_network_button"

        android:indeterminate="true"
        app:indicatorSize="24dp"

        />

        <TextView
            android:id="@+id/create_network_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/create_network_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/network_create_error"
            android:textSize="8pt"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/by_s_red"
            android:layout_marginTop="0dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>