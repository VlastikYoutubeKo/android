<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:maxWidth="96dp"
    android:maxHeight="96dp"
    android:minWidth="72dp"
    android:minHeight="72dp"
    android:layout_width="72dp"
    android:layout_height="wrap_content">


    <ImageButton
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/connect_country_image"

        android:minWidth="72dp"
        android:minHeight="72dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"

        android:padding="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:scaleType="fitCenter"
        android:src="@drawable/placeholder_rect"
        />


    <TextView
        android:id="@+id/connect_country_code"
        android:layout_height="wrap_content"
        android:layout_width="0dp"



        app:layout_constraintBottom_toTopOf="@id/connect_provider_summary"
        app:layout_constraintLeft_toLeftOf="@id/connect_provider_summary"
        app:layout_constraintRight_toRightOf="@id/connect_provider_summary"


        android:background="@color/almost_white_slight_alpha"
        android:text="us"
        android:textSize="8pt"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:textColor="@color/by_p_blue"
        />

    <TextView
        android:id="@+id/connect_provider_summary"
        android:layout_height="wrap_content"
        android:minWidth="42dp"
        android:layout_width="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:padding="0dp"

        android:background="@color/almost_white_slight_alpha"
        android:text="123"
        android:textSize="8pt"
        android:fontFamily="sans-serif-thin"
        android:textAlignment="center"
        android:maxLines="1"
        android:ellipsize="end"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
