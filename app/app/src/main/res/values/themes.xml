<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BringYour" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="BringYourActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="android:icon">@null</item>
        <item name="android:logo">@null</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ProvideSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/provide_switch_thumb_color_list</item>
        <item name="trackTint">@color/provide_switch_track_color_list</item>
    </style>
</resources>