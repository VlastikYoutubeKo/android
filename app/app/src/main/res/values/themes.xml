<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BringYour" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/by_p_blue</item>
        <item name="colorPrimaryVariant">@color/by_s_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/by_p_gray</item>
        <item name="colorSecondaryVariant">@color/by_s_brown</item>
        <item name="colorOnSecondary">@color/by_s_green</item>

        <item name="android:colorBackground">@color/almost_white</item>
        <item name="android:windowBackground">@color/almost_white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/by_p_blue</item>
        <!-- Customize your theme here. -->

        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <item name="colorUpgradeBackground">@color/by_highlight</item>
        <item name="colorUpgradeButton">@color/by_highlight_gray</item>
        <item name="colorOnUpgradeButton">@color/white</item>



    </style>



    <style name="Theme.BringYour.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/by_p_blue</item>
        <item name="colorPrimaryVariant">@color/by_s_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/by_p_gray</item>
        <item name="colorSecondaryVariant">@color/by_s_brown</item>
        <item name="colorOnSecondary">@color/by_s_green</item>

        <item name="android:colorBackground">@color/almost_white</item>
        <item name="android:windowBackground">@color/almost_white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/by_p_blue</item>
        <!-- Customize your theme here. -->

        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <item name="colorUpgradeBackground">@color/by_highlight</item>
        <item name="colorUpgradeButton">@color/by_highlight_gray</item>
        <item name="colorOnUpgradeButton">@color/white</item>

    </style>


    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="android:icon">@drawable/logo_by</item>
        <item name="android:logo">@drawable/logo_by</item>
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
    </style>

    <style name="ProvideSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/provide_switch_thumb_color_list</item>
        <item name="trackTint">@color/provide_switch_track_color_list</item>
    </style>
</resources>