<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <!-- free badge image -->
    <!-- provider count -->
    <!-- edge count -->
    <!-- region count -->
    <!-- country count -->

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/free_free_center_line"
        app:barrierDirection="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="free_free_provider_count,free_free_edge_count,free_free_region_count,free_free_region_count"/>

    <!-- CENTER_INSIDE -->
    <ImageView
        android:id="@+id/free_free_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/free_free_center_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_margin="8dp"

        android:scaleType="centerInside"
        android:src="@drawable/badge_free"
        android:contentDescription="@string/free_free_badge"
        />

    <TextView
        android:id="@+id/free_free_provider_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/free_free_badge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/free_free_edge_count"
        app:layout_constraintHorizontal_bias="0"

        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:text="20 providers"
        />

    <TextView
        android:id="@+id/free_free_edge_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/free_free_badge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/free_free_provider_count"
        app:layout_constraintBottom_toTopOf="@id/free_free_region_count"
        app:layout_constraintHorizontal_bias="0"

        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:text="20 edges"
        />

    <TextView
        android:id="@+id/free_free_region_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/free_free_badge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/free_free_edge_count"
        app:layout_constraintBottom_toTopOf="@id/free_free_country_count"
        app:layout_constraintHorizontal_bias="0"

        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:text="20 regions"
        />

    <TextView
        android:id="@+id/free_free_country_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/free_free_badge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/free_free_region_count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"

        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:text="20 countries"
        />

</androidx.constraintlayout.widget.ConstraintLayout>