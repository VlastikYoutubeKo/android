<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/device_image"
        android:layout_width="64dp"
        android:layout_height="64dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:src="@drawable/device_android"
        />

    <TextView
        android:id="@+id/device_client_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/device_image"
        app:layout_constraintRight_toLeftOf="@id/device_client_id_copy"

        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"

        android:text="F5B1ADA1-7771-43C4-8EB9-5B3F31F67503"

        android:textSize="8pt"
        android:fontFamily="sans-serif-thin"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <ImageButton
        style="@style/Widget.AppCompat.Button.Borderless"

        android:id="@+id/device_client_id_copy"

        android:layout_width="32dp"
        android:layout_height="32dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/device_client_id"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"

        android:src="@drawable/content_copy_24px"
        android:scaleType="fitCenter"

        android:padding="0dp"
        />

    <ImageView
        android:id="@+id/device_connected_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"

        app:layout_constraintLeft_toRightOf="@id/device_image"
        app:layout_constraintRight_toLeftOf="@id/device_connected_summary"
        app:layout_constraintTop_toTopOf="@id/device_connected_summary"
        app:layout_constraintBottom_toBottomOf="@id/device_connected_summary"

        android:src="@drawable/device_connected_connected"
        />

    <TextView
        android:id="@+id/device_connected_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toRightOf="@id/device_connected_icon"
        app:layout_constraintTop_toBottomOf="@id/device_client_id"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"

        android:text="Connected"

        android:textSize="6pt"
        android:fontFamily="sans-serif-light"
        />

    <TextView
        android:id="@+id/device_this_device_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/device_client_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/device_client_id_copy"

        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"

        android:text="This device"
        android:textAllCaps="true"
        android:textColor="@color/by_p_blue"
        android:textSize="6pt"
        android:fontFamily="sans-serif"
        />



</androidx.constraintlayout.widget.ConstraintLayout>