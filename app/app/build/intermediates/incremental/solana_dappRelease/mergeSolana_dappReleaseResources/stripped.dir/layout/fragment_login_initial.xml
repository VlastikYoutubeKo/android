<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <VideoView
        android:id="@+id/video_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_max="480dp"
        app:layout_constraintHeight_max="480dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/content_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="144dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/logo_by_black"
        android:contentDescription="@string/login_logo_description"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintWidth_max="480dp"
        app:layout_constraintTop_toBottomOf="@id/video_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="-32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >

    <TextView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/login_headline"
        android:textSize="12pt"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/by_p_blue"


        />


    <TextView
        android:id="@+id/login_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Login"
        android:textSize="12pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"

        />



    <com.google.android.material.button.MaterialButton
        style="@style/Widget.AppCompat.Button.Borderless"

        android:id="@+id/login_create_network_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/login_header"
        app:layout_constraintBottom_toBottomOf="@id/login_header"
        app:layout_constraintRight_toRightOf="parent"
        android:text="or create a network"
        android:textAllCaps="false"
        android:textSize="8pt"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/by_p_blue"
        app:backgroundTint="@color/p_s_gray"

        />





    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_sign_in_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/login_header"
        app:layout_constraintBottom_toTopOf="@id/login_separator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="16dp"

        app:buttonSize="wide"
        app:colorScheme="light"

        />


    <TextView
        android:id="@+id/login_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/google_sign_in_button"
        app:layout_constraintBottom_toTopOf="@id/login_user_auth_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="- or -"
        android:textSize="8pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"

        />

    <TextView
        android:id="@+id/login_user_auth_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_separator"
        app:layout_constraintBottom_toTopOf="@id/login_user_auth"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Email or phone number"
        android:textSize="8pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"

        />

    <EditText

        android:id="@+id/login_user_auth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_user_auth_header"
        app:layout_constraintBottom_toTopOf="@id/login_user_auth_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="10pt"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_marginTop="0dp"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_user_auth_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_user_auth"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Continue"
        android:textSize="8pt"
        android:fontFamily="sans-serif-thin"
        android:layout_marginTop="8dp"
        />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/login_user_auth_spinner"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/login_user_auth_button"
        app:layout_constraintBottom_toBottomOf="@id/login_user_auth_button"
        app:layout_constraintLeft_toRightOf="@id/login_user_auth_button"

        android:indeterminate="true"
        app:indicatorSize="24dp"

        />

        <TextView
            android:id="@+id/login_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/login_user_auth_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/login_error"
            android:textSize="8pt"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/by_s_red"
            android:layout_marginTop="0dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>